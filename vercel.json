{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "style.css",
      "use": "@vercel/static"
    },
    {
      "src": "script.js",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/quiz",
      "dest": "/api/quiz.py"
    },
    {
      "src": "/api/practice",
      "dest": "/api/practice.py"
    },
    {
      "src": "/papers/(.*)",
      "dest": "/public/papers/$1"
    },
    {
      "src": "/(.*\\.(css|js|pdf|png|ico))",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
